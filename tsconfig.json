// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // <--- CHANGE THIS from "ES2022" to "NodeNext"
    "moduleResolution": "NodeNext", // Ensure this also matches "NodeNext"
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}